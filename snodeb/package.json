{
  "name": "snodeb",
  "version": "1.1.3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Soneliem/snodeb.git"
  },
  "homepage": "https://snodeb.sonel.dev",
  "bin": "dist/cli.js",
  "files": [
    "dist",
    "public"
  ],
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "lint": "biome check src/ --fix",
    "format": "biome format src/ --fix"
  },
  "author": "Sonel",
  "license": "MIT",
  "description": "Fast and simple Debian packaging for Node.js projects",
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/cli.ts"
    ],
    "clean": true,
    "outDir": "dist",
    "publicDir": true,
    "minify": true,
    "dts": true
  },
  "devDependencies": {
    "@types/cli-progress": "3.11.6",
    "@types/node": "24.5.2",
    "@types/tar": "6.1.13",
    "c12": "3.3.0",
    "cli-progress": "3.12.0",
    "defu": "6.1.4",
    "glob": "11.0.3",
    "tar": "7.5.1",
    "tsup": "8.5.0",
    "typescript": "5.9.2"
  }
}
