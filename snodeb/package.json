    "dts": true
  },
  "devDependencies": {
    "@bitc/copy-node-modules": "^1.0.1",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^24.0.1",
    "@types/tar": "^6.1.13",
    "c12": "^3.0.4",
    "cli-progress": "^3.12.0",
    "copy-node-modules": "^1.1.1",
    "defu": "^6.1.4",
    "glob": "^11.0.3",
    "tar": "^7.4.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "distize": "^2.2.2"
  }
}
