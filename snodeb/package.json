{
  "name": "snodeb",
  "version": "0.0.3",
  "main": "dist/index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Soneliem/snodeb.git"
  },
  "homepage": "https://snodeb.sonel.dev",
  "bin": {
    "snodeb": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --fix",
    "format": "biome format src/",
    "format:fix": "biome format src/ --fix"
  },
  "author": "Sonel",
  "license": "MIT",
  "description": "Fast and simple Debian packaging for Node.js projects",
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "clean": true,
    "format": [
      "esm"
    ],
    "outDir": "dist",
    "publicDir": true
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/tar": "^6.1.13",
    "tsup": "^8.4.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "glob": "^11.0.1",
    "tar": "^7.4.3",
    "type-fest": "^4.37.0"
  }
}
