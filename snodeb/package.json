{
  "name": "snodeb",
  "version": "1.1.2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Soneliem/snodeb.git"
  },
  "homepage": "https://snodeb.sonel.dev",
  "bin": "dist/cli.js",
  "files": [
    "dist",
    "public"
  ],
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "lint": "biome check src/ --fix",
    "format": "biome format src/ --fix"
